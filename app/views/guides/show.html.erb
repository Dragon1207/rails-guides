<div class="mb-[100px] mx-[180px] flex flex-col justify-start">
    <div class="flex space-x-[20px]">
        <div class="text-[16px] text-[#91989b]">Home</div>
        <div class="text-[16px] text-[#91989b]">></div>
        <div class="text-[16px] text-[#91989b]">Guide</div>
        <div class="text-[16px] text-[#91989b]">></div>
        <div id='sectionText' class="text-[16px] text-[#FF1A1A]"><%= @guides.first.section %></div>
    </div>
    <div class="mt-[50px] flex justify-start items-start">
        <div class="flex flex-col justify-start items-center space-y-[50px]">
            <% @guides.each_with_index do |guide, index| %>
                <% if index == 0 %>
                <a id='secBtn<%= index %>' href='#<%= index %>' type='button' onclick='sectionClicked(<%= index %>)' class="focus:outline-none hover:bg-red-800 focus:ring-4 focus:ring-red-300 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900 flex w-[240px] h-[60px] bg-[#FF1A1A] rounded-[10px] text-[16px] justify-center items-center text-center text-white"><%= guide.section %></a>
                <% else %>
                <a id='secBtn<%= index %>' href='#<%= index %>' type='button' onclick='sectionClicked(<%= index %>)' class="text-[16px] text-[#4d4d4d]"><%= guide.section %></a>
                <% end %>
            <% end %>
        </div>
        <div class="ml-[70px] flex flex-col -mt-[50px]">
            <div class='font-poppins'>
                <% @guides.each_with_index do |guide, index| %>
                    <% if index == 0 %>
                    <div id='<%= index %>' class='text-[44px] mt-[35px] font-bold font-sans text-[#010101]'><%= guide.title %></div>
                    <% else %>
                    <div id='<%= index %>' class='text-[28px] mt-[35px] font-bold font-sans text-[#010101]'><%= guide.title %></div>
                    <% end %>
                    <div class="mt-[20px] text-[16px] font-normal font-poppins leading-[26px] text-[#5c6366]"><%= guide.content %></div>
                    <% if index+1 != @guides.length() %>
                    <div class='mt-[25px] h-[1px] w-[100%] bg-[#5C6366]'></div>
                    <% end %>
                <% end %>
            </div>
        </div>
    </div>
</div>
<script>
var originId = 0;
function sectionClicked(id) {
    document.getElementById('sectionText').innerHTML = document.getElementById('secBtn'+id).innerHTML;
    
    document.getElementById(originId).classList.remove('text-[44px]');
    document.getElementById(originId).classList.add('text-[28px]');
    document.getElementById(id).classList.remove('text-[28px]');
    document.getElementById(id).classList.add('text-[44px]');

    document.getElementById('secBtn'+originId).classList.remove(
        'focus:outline-none', 'hover:bg-red-800', 'focus:ring-4', 'focus:ring-red-300', 'dark:bg-red-600',
        'dark:hover:bg-red-700', 'dark:focus:ring-red-900', 'flex', 'w-[240px]', 'h-[60px]', 'bg-[#FF1A1A]',
        'rounded-[10px]', 'text-[16px]', 'justify-center', 'items-center', 'text-center', 'text-white'
    );
    document.getElementById('secBtn'+originId).classList.add(
        'text-[#4d4d4d]'
    );
    document.getElementById('secBtn'+id).classList.remove(
        'text-[#4d4d4d]'
    );
    document.getElementById('secBtn'+id).classList.add(
        'focus:outline-none', 'hover:bg-red-800', 'focus:ring-4', 'focus:ring-red-300', 'dark:bg-red-600',
        'dark:hover:bg-red-700', 'dark:focus:ring-red-900', 'flex', 'w-[240px]', 'h-[60px]', 'bg-[#FF1A1A]',
        'rounded-[10px]', 'text-[16px]', 'justify-center', 'items-center', 'text-center', 'text-white'
    );
    originId = id;
}
</script>